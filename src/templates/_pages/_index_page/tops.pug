					+topsCard(`${assetsPath}/img/tops_card_pic_1.jpg`, 'Пригород', 'Сады Маковского ', 'от 7 264 060 ₽', 'Сдача в 2023', 'Акция')
					+topsCard(`${assetsPath}/img/tops_card_pic_1.jpg`, 'Верхняя улица, 16', 'Premium Park Дом №1 ', 'от 7 264 060 ₽', 'Сдача в 2023', 'Акция')
