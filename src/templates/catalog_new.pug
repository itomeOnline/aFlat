extends _base/_layout
block settings 

	- title = 'Каталог новостроек — AFLAT';

mixin topsCard(img, place, title, price, tag1, tag2)
	a.tops_card(href="/complex_page")
		.tops_card__bg
			+img(img, '', 'image')
		.tops_card__tags 
			.tops_card__tag
				span.text= tag1
			.tops_card__tag
				span.text= tag2
		.tops_card__info
			p.tops_card__caption= place
			h3.tops_card__title= title
			p.tops_card__price= price
			button.tops_card__btn.btn.btn--white.btn--small
				span.btn__text 1 квартира

block content
	main.view(data-app-layout="view", data-app-layout-namespace="examples")

		section.section.catalog
			.catalog__container.container 
				.catalog__breadcrumbs.breadcrumbs
					a.breadcrumbs__link(href="/") Главная
					.breadcrumbs__dot 
					.breadcrumbs__link.is-active Каталог новостроек

				
				h1.section_block__title Каталог новостроек

				.catalog_filters
					.catalog_filters__tabs
						button.catalog_filters__tabs_btn Сдан
						button.catalog_filters__tabs_btn Сдача в 2023
						button.catalog_filters__tabs_btn Сдача в 2024
						button.catalog_filters__tabs_btn Есть акции
						button.catalog_filters__tabs_btn С отделкой
					
					.catalog_filters__main
						.catalog_filters__block
							p.catalog_filters__caption Район
							.catalog_filters__select.select(data-dropdown="", data-dropdown-name="place", data-dropdown-placeholder="Район", data-dropdown-readonly="true", data-dropdown-options='[{"key":"Любой","value":"Любой"},{"key":"Район1","value":"Район1"},{"key":"Район2","value":"Район2"},{"key":"Район3","value":"Район3"},{"key":"Район4","value":"Район4"},{"key":"Район5","value":"Район5"},{"key":"Район6","value":"Район6"}]')
						.catalog_filters__block
